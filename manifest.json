{
  "manifest_version": 3,
  "name": "YouTube Studio Visibility Enhancer",
  "version": "1.0.0",
  "description": "Streamlines YouTube video visibility management with inline controls and batch operations",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://studio.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Visibility Enhancer"
  }
}