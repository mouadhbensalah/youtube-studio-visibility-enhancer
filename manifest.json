{
  "manifest_version": 3,
  "name": "YouTube Studio Visibility Enhancer",
  "version": "2.1.0",
  "description": "Streamline YouTube video visibility management with hotkeys and batch editing. Premium bulk tab management, smart click interception, and auto page optimization.",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "https://studio.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://studio.youtube.com/video/*/edit*",
        "https://studio.youtube.com/channel/*/videos/upload*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://studio.youtube.com/playlist/*/videos*",
        "https://studio.youtube.com/playlist/*/edit*", 
        "https://studio.youtube.com/playlist/*/analytics*"
      ],
      "js": [
        "playlist-editor.js", 
        "bulk-tab-manager.js", 
        "playlist-link-copier.js", 
        "pagination-bypass.js",
        "playlist-auto-optimizer.js"
      ],
      "css": ["playlist-editor.css", "bulk-tab-manager.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Studio Visibility Enhancer"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "playlist-editor.css", "bulk-tab-manager.css"],
      "matches": ["https://studio.youtube.com/*"]
    }
  ]
}