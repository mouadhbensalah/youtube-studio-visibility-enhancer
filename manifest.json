{
  "manifest_version": 3,
  "name": "YouTube Studio Visibility Enhancer",
  "version": "2.0.0",
  "description": "Premium batch editing for YouTube Studio with bulk tab management and smart click interception",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "https://studio.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/video/*/edit*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://studio.youtube.com/playlist/*/videos*"],
      "js": ["playlist-editor.js", "bulk-tab-manager.js"],
      "css": ["playlist-editor.css", "bulk-tab-manager.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Visibility Enhancer"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["https://studio.youtube.com/*"]
    }
  ]
}